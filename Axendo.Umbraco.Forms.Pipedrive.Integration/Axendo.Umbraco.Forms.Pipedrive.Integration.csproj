<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>$(AssemblyName)</PackageId>
    <Title>Umbraco Froms integrations by Axendo: Pipedrive</Title>
    <VersionPrefix>3.0.0</VersionPrefix>
    <VersionSuffix>-beta</VersionSuffix>
    <Version>$(VersionPrefix)$(VersionSuffix)</Version>
    <Authors>Axendo HQ</Authors>
    <Company>Axendo</Company>
    <Description>An integration between Umbraco Forms and Pipedrive for submitting data to Pipedrive.</Description>
    <Copyright>Copyright Â© 2022-2024</Copyright>
    <PackageProjectUrl>https://github.com/AxendoNL/Axendo.Umb.Forms.Pipedrive.Integration/tree/v2/documentation</PackageProjectUrl>
    <PackageIcon>axendo.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/AxendoNL/Axendo.Umb.Forms.Pipedrive.Integration/tree/v2/Axendo.Umbraco.Forms.Pipedrive.Integration/App_Plugins/Axendo.Umbraco.Forms.Pipedrive</RepositoryUrl>
    <PackageTags>umbraco, umbraco-cms, pipedrive, umbracoForms</PackageTags>
    <PackageReleaseNotes>Made compatible with Umbraco 13 and .Net 8.0</PackageReleaseNotes>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net80'">
    <!-- Accepts 3.0 up to 3.x, but not 4.0 and higher. Will resolve to the smallest acceptable stable version.-->
    <PackageReference Include="Axendo.Umbraco.Forms.Pipedrive.Integration.Core" Version="[3.0.0,4.0.0)" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="..\documentation\images\axendo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\documentation\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="App_Plugins\Axendo.Umbraco.Forms.Pipedrive\**\*.*">
      <Pack>true</Pack>
      <PackagePath>App_Plugins\Axendo.Umbraco.Forms.Pipedrive\</PackagePath>
    </Content>
    <None Include="build\**\*.*">
      <Pack>True</Pack>
      <PackagePath>buildTransitive</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="App_Plugins\**\*.*">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>
    
</Project>
